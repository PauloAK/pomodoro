<div class="task-container px-2" x-data="taskManager()">

    <div class="flex justify-center flex-wrap">
        <template x-for="queue in queues">
            <div class="w-1/3 p-3">
                <div class="shadow-lg rounded-2xl bg-white p-2 border border-gray-100">
                    <div class="w-full text-center">
                        <h3 class="text-lg mb-2" x-text="queue"></h3>
                        <div class="tasks">
                            <button class="bt-add-task" type="button" @click="editTask(null, queue)">
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
                                </svg>
                                Add Task
                            </button>
                        </div>
                    </div>

                    <template x-for="task in taskManager.getTasks().filter( task => task.queue == queue)">
                        <div class="task">
                            <div class="content" x-text="task.title"></div>
                            <div class="footer">
                                <div class="tags">

                                </div>
                                <div class="buttons">
                                    <button class="bt bt-blue px-3 py-1" @click="editTask(task.identifier)">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                            <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                                        </svg>
                                    </button>
                                    <button class="bt bt-red px-3 py-1">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
                                        </svg>
                                    </button>
                                </div>
                            </div>

                        </div>
                    </template>
                </div>
            </div>
        </template>
    </div>

    <%- include('./task-form-modal') -%>


</div>